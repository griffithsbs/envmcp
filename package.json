  "bugs": {
    "url": "https://github.com/griffithsbs/envmcp/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^18.16.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "sample.env.mcp"
